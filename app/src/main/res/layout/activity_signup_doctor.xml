<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#fff">


        <TextView
            android:id="@+id/signupDoctor"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/ic_action_back"
            android:text="@string/signup"

            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:background="@color/colorPrimary" />

        <EditText
            android:id="@+id/FirstName"
            android:layout_width="290dp"
            android:layout_height="35dp"
            android:layout_below="@+id/signupDoctor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="@string/FNAME"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/LastName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/FirstName"
            android:layout_alignLeft="@+id/FirstName"
            android:layout_alignRight="@+id/FirstName"
            android:layout_alignStart="@+id/FirstName"
            android:layout_below="@+id/FirstName"
            android:ems="10"
            android:hint="@string/lNAME"
            android:inputType="textPersonName"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/LastName"
            android:layout_alignLeft="@+id/LastName"
            android:layout_alignRight="@+id/LastName"
            android:layout_alignStart="@+id/LastName"
            android:layout_below="@+id/LastName"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_alignRight="@+id/email"
            android:layout_alignStart="@+id/email"
            android:layout_below="@+id/email"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/cpassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignRight="@+id/password"
            android:layout_alignStart="@+id/password"
            android:layout_below="@+id/password"
            android:ems="10"
            android:hint="@string/cpassword"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/sgender"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/medicalid"
            android:layout_alignLeft="@+id/byear"
            android:layout_alignRight="@+id/medicalid"
            android:layout_alignStart="@+id/byear"
            android:layout_below="@+id/medicalid"
            android:entries="@array/gender"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sgender"
            android:layout_alignBottom="@+id/sgender"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:text="@string/Gender"
            android:textColor="@color/colorblack"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/shospital"
            android:layout_alignBottom="@+id/shospital"
            android:layout_alignLeft="@+id/gender"
            android:layout_alignStart="@+id/gender"
            android:text="@string/hospital"
            android:textColor="@color/colorblack"
            android:textSize="12sp"
            />

        <Spinner
            android:id="@+id/shospital"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/sgender"
            android:layout_alignLeft="@+id/sgender"
            android:layout_alignRight="@+id/sgender"
            android:layout_alignStart="@+id/sgender"
            android:layout_below="@+id/sgender"
            android:entries="@array/hospital"
            android:spinnerMode="dropdown" />

        <EditText
            android:id="@+id/medicalid"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/cpassword"
            android:layout_alignLeft="@+id/cpassword"
            android:layout_alignRight="@+id/cpassword"
            android:layout_alignStart="@+id/cpassword"
            android:layout_alignTop="@+id/star7"
            android:ems="10"
            android:hint="@string/medical_id"
            android:inputType="number"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/byear"
            android:layout_alignBottom="@+id/byear"
            android:layout_alignLeft="@+id/hospital"
            android:layout_alignStart="@+id/hospital"
            android:text="@string/bdate"
            android:textColor="@color/colorblack"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/byear"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_above="@+id/star11"
            android:layout_toEndOf="@+id/birthdate"
            android:layout_toRightOf="@+id/birthdate"
            android:entries="@array/year" />

        <Spinner
            android:id="@+id/sday"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_above="@+id/phone"
            android:layout_toLeftOf="@+id/smonth"
            android:layout_toStartOf="@+id/smonth"
            android:entries="@array/day" />

        <Spinner
            android:id="@+id/smonth"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/shospital"
            android:layout_alignRight="@+id/shospital"
            android:layout_below="@+id/shospital"
            android:entries="@array/month" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/medicalid"
            android:layout_alignStart="@+id/medicalid"
            android:layout_below="@+id/byear"
            android:layout_toLeftOf="@+id/star11"
            android:layout_toStartOf="@+id/star11"
            android:ems="10"
            android:hint="@string/phone"
            android:inputType="phone"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/Major"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/phone"
            android:layout_alignLeft="@+id/phone"
            android:layout_alignRight="@+id/phone"
            android:layout_alignStart="@+id/phone"
            android:layout_below="@+id/phone"
            android:ems="10"
            android:hint="@string/Major"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/aboutMe"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/star11"
            android:layout_alignLeft="@+id/Major"
            android:layout_alignRight="@+id/star11"
            android:layout_alignStart="@+id/Major"
            android:layout_below="@+id/Major"
            android:ems="10"
            android:hint="@string/aboutme"
            android:inputType="textLongMessage"
            android:textSize="12sp" />

        <Button
            android:id="@+id/SignupBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/aboutMe"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/byear"
            android:layout_toRightOf="@+id/byear"
            android:background="@color/colorPrimary"
            android:text="@string/signup" />

        <TextView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/FirstName"
            android:layout_toEndOf="@+id/FirstName"
            android:layout_toRightOf="@+id/FirstName"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/LastName"
            android:layout_toEndOf="@+id/LastName"
            android:layout_toRightOf="@+id/LastName"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/LastName"
            android:layout_toEndOf="@+id/LastName"
            android:layout_toRightOf="@+id/LastName"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LastName"
            android:layout_toEndOf="@+id/LastName"
            android:layout_toRightOf="@+id/LastName"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/password"
            android:layout_toEndOf="@+id/password"
            android:layout_toRightOf="@+id/password"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_toEndOf="@+id/cpassword"
            android:layout_toRightOf="@+id/cpassword"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cpassword"
            android:layout_toEndOf="@+id/medicalid"
            android:layout_toRightOf="@+id/medicalid"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sgender"
            android:layout_toEndOf="@+id/medicalid"
            android:layout_toRightOf="@+id/medicalid"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sgender"
            android:layout_toEndOf="@+id/smonth"
            android:layout_toRightOf="@+id/smonth"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/shospital"
            android:layout_toEndOf="@+id/smonth"
            android:layout_toRightOf="@+id/smonth"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/smonth"
            android:layout_toEndOf="@+id/smonth"
            android:layout_toRightOf="@+id/smonth"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>


    </RelativeLayout>
</ScrollView>