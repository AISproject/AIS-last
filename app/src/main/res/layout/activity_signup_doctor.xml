<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#fff">


        <TextView
            android:id="@+id/signupDoctor"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"

            android:text="@string/signupDo"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/FirstName"
            android:layout_width="290dp"
            android:layout_height="35dp"
            android:layout_below="@+id/signupDoctor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="126dp"
            android:ems="10"
            android:hint="@string/FNAME"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/LastName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/FirstName"
            android:layout_alignLeft="@+id/FirstName"
            android:layout_alignRight="@+id/FirstName"
            android:layout_alignStart="@+id/FirstName"
            android:layout_below="@+id/FirstName"
            android:ems="10"
            android:hint="@string/lNAME"
            android:inputType="textPersonName"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/LastName"
            android:layout_alignStart="@+id/LastName"
            android:layout_below="@+id/LastName"
            android:layout_toLeftOf="@+id/star4"
            android:layout_toStartOf="@+id/star4"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_alignRight="@+id/email"
            android:layout_alignStart="@+id/email"
            android:layout_below="@+id/email"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/cpassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignRight="@+id/password"
            android:layout_alignStart="@+id/password"
            android:layout_below="@+id/password"
            android:ems="10"
            android:hint="@string/cpassword"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/sgender"
            android:layout_width="290dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/cpassword"
            android:layout_alignStart="@+id/cpassword"
            android:layout_alignTop="@+id/star7"
            android:spinnerMode="dropdown"
            android:focusableInTouchMode="true"
            android:focusable="true"/>


        <EditText
            android:id="@+id/medicalid"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/bdate"

            android:layout_alignStart="@+id/bdate"
            android:layout_below="@id/bdate"
            android:layout_toLeftOf="@+id/star10"
            android:layout_toStartOf="@+id/star10"
            android:ems="10"
            android:hint="@string/medical_id"
            android:inputType="number"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/bdate"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/sgender"
            android:layout_alignLeft="@+id/sgender"
            android:layout_alignRight="@+id/sgender"
            android:layout_alignStart="@+id/sgender"
            android:layout_below="@+id/sgender"
            android:focusable="false"
            android:hint="@string/bdate"
            android:textSize="13sp" />

        <Spinner
            android:id="@+id/Major"
            android:layout_width="290dp"
            android:layout_height="35dp"
            android:layout_below="@+id/medicalid"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/Major"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/aboutMe"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/Major"
            android:layout_alignLeft="@+id/Major"
            android:layout_alignRight="@+id/Major"
            android:layout_alignStart="@+id/Major"
            android:layout_below="@+id/star11"
            android:ems="10"
            android:hint="@string/aboutme"
            android:inputType="textLongMessage"
            android:textSize="12sp" />

        <Button
            android:id="@+id/SignupBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"

            android:layout_below="@+id/Major"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:background="@color/colorPrimary"
            android:text="@string/signupBut" />

        <TextView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/FirstName"
            android:layout_toEndOf="@+id/FirstName"
            android:layout_toRightOf="@+id/FirstName"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/LastName"
            android:layout_toEndOf="@+id/LastName"
            android:layout_toRightOf="@+id/LastName"
            android:text="@string/star"
            android:textColor="@color/colorRed" />


        <TextView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LastName"
            android:layout_toEndOf="@+id/LastName"
            android:layout_toRightOf="@+id/LastName"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/password"
            android:layout_toEndOf="@+id/password"
            android:layout_toRightOf="@+id/password"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_toEndOf="@+id/cpassword"
            android:layout_toRightOf="@+id/cpassword"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cpassword"
            android:layout_toEndOf="@+id/medicalid"
            android:layout_toRightOf="@+id/medicalid"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sgender"
            android:layout_toEndOf="@+id/medicalid"
            android:layout_toRightOf="@+id/medicalid"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/sgender"
            android:layout_toEndOf="@+id/sgender"
            android:layout_toRightOf="@+id/sgender"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/bdate"
            android:layout_toEndOf="@+id/bdate"
            android:layout_toRightOf="@+id/bdate"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBaseline="@+id/Major"
            android:layout_alignBottom="@+id/Major"
            android:layout_toEndOf="@+id/Major"
            android:layout_toRightOf="@+id/Major"
            android:text="@string/star"
            android:textColor="@color/colorRed" />


    </RelativeLayout>
</ScrollView>