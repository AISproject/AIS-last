<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/gender"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/ageRange"
        android:layout_alignLeft="@+id/genderTextCorona"
        android:layout_alignRight="@+id/ageRange"
        android:layout_alignStart="@+id/genderTextCorona"
        android:layout_below="@+id/genderTextCorona"
        android:spinnerMode="dropdown"
        />

    <TextView
        android:id="@+id/genderTextCorona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ageRange"
        android:layout_alignStart="@+id/ageRange"
        android:layout_below="@+id/ageRange"
        android:layout_marginTop="14dp"
        android:text="@string/Gender" />


    <EditText
        android:id="@+id/date"
        android:layout_width="270dp"
        android:layout_height="35dp"
        android:layout_below="@+id/DateTextCorona"
        android:layout_centerHorizontal="true"
        android:focusable="false"
        android:hint="@string/date2"
        android:inputType="date"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/reportCoronaNav"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:text="@string/Reportflu"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/DateTextCorona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/reportCoronaNav"
        android:layout_marginTop="42dp"
        android:text="@string/date1" />

    <Button
        android:id="@+id/locationTextCorona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/type"
        android:layout_alignStart="@+id/type"
        android:layout_below="@+id/type"
        android:layout_marginTop="22dp"
        android:text="@string/location" />

    <TextView
        android:id="@+id/ageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/date"
        android:layout_marginTop="17dp"
        android:text="@string/age" />

    <Button
        android:id="@+id/reportCoronabu"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/locationTextCorona"
        android:layout_alignStart="@+id/locationTextCorona"
        android:layout_below="@+id/locationTextCorona"
        android:layout_marginTop="54dp"
        android:layout_toLeftOf="@+id/star14"
        android:layout_toStartOf="@+id/star14"
        android:background="@android:color/holo_red_light"
        android:text="@string/report" />

    <Button
        android:id="@+id/cancelBut"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/reportCoronabu"
        android:layout_alignLeft="@+id/reportCoronabu"
        android:layout_alignRight="@+id/reportCoronabu"
        android:layout_alignStart="@+id/reportCoronabu"
        android:layout_alignTop="@+id/reportCoronabu"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_red_light"
        android:text="@string/reset" />

    <Spinner
        android:id="@+id/ageRange"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/date"
        android:layout_alignLeft="@+id/ageText"
        android:layout_alignRight="@+id/date"
        android:layout_alignStart="@+id/ageText"
        android:layout_below="@+id/ageText"
         />

    <TextView
        android:id="@+id/typeOfContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gender"
        android:layout_alignStart="@+id/gender"
        android:layout_below="@+id/gender"
        android:layout_marginTop="15dp"
        android:text="@string/type_of_contact" />

    <Spinner
        android:id="@+id/type"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/gender"
        android:layout_alignLeft="@+id/typeOfContact"
        android:layout_alignRight="@+id/gender"
        android:layout_alignStart="@+id/typeOfContact"
        android:layout_below="@+id/typeOfContact"
        />

    <TextView
        android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/date"
        android:layout_alignBottom="@+id/date"
        android:layout_toEndOf="@+id/date"
        android:layout_toRightOf="@+id/date"
        android:text="@string/star"
        android:textColor="@color/colorRed" />

    <TextView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ageRange"
        android:layout_toEndOf="@+id/ageRange"
        android:layout_toRightOf="@+id/ageRange"
        android:text="@string/star"
        android:textColor="@color/colorRed" />

    <TextView
        android:id="@+id/star12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genderTextCorona"
        android:layout_toEndOf="@+id/gender"
        android:layout_toRightOf="@+id/gender"
        android:text="@string/star"
        android:textColor="@color/colorRed" />

    <TextView
        android:id="@+id/star13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/type"
        android:layout_toEndOf="@+id/type"
        android:layout_toRightOf="@+id/type"
        android:text="@string/star"
        android:textColor="@color/colorRed" />

    <TextView
        android:id="@+id/star14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/locationTextCorona"
        android:layout_alignBottom="@+id/locationTextCorona"
        android:layout_alignEnd="@+id/star13"
        android:layout_alignRight="@+id/star13"
        android:text="@string/star"
        android:textColor="@color/colorRed" />

</RelativeLayout>