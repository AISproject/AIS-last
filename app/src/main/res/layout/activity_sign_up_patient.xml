<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#fff">


        <TextView
            android:id="@+id/signupPatient"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawableStart="@drawable/ic_action_back"
            android:text="@string/signup"

            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:background="@color/colorPrimary" />

        <EditText
            android:id="@+id/FirstName"
            android:layout_width="290dp"
            android:layout_height="35dp"
            android:layout_below="@+id/signupPatient"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="@string/FNAME"
            android:inputType="textPersonName"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/LastName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/FirstName"
            android:layout_alignStart="@+id/FirstName"
            android:layout_below="@+id/FirstName"
            android:layout_toLeftOf="@+id/star2"
            android:layout_toStartOf="@+id/star2"
            android:ems="10"
            android:hint="@string/lNAME"
            android:inputType="textPersonName"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/LastName"
            android:layout_alignLeft="@+id/LastName"
            android:layout_alignRight="@+id/LastName"
            android:layout_alignStart="@+id/LastName"
            android:layout_below="@+id/LastName"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_alignRight="@+id/email"
            android:layout_alignStart="@+id/email"
            android:layout_below="@+id/email"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/cpassword"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_alignRight="@+id/password"
            android:layout_alignStart="@+id/password"
            android:layout_below="@+id/password"
            android:ems="10"
            android:hint="@string/cpassword"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/cpassword"
            android:layout_alignStart="@+id/cpassword"
            android:layout_alignTop="@+id/star7"
            android:layout_toLeftOf="@+id/star7"
            android:layout_toStartOf="@+id/star7"
            android:ems="10"
            android:hint="@string/phone"
            android:inputType="phone"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/sgender"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/star8"
            android:layout_toEndOf="@+id/birthdate"
            android:layout_toLeftOf="@+id/star8"
            android:layout_toRightOf="@+id/birthdate"
            android:layout_toStartOf="@+id/star8"
            android:entries="@array/gender"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/sgender"
            android:layout_alignBottom="@+id/sgender"
            android:layout_alignLeft="@+id/phone"
            android:layout_alignStart="@+id/phone"
            android:text="@string/Gender"
            android:textColor="@color/colorblack"
            android:textSize="12sp" />




        <TextView
            android:id="@+id/birthdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/byear"
            android:layout_alignBottom="@+id/byear"
            android:layout_alignLeft="@+id/gender"
            android:layout_alignStart="@+id/gender"
            android:text="@string/bdate"
            android:textColor="@color/colorblack"
            android:textSize="12sp" />

        <Spinner
            android:id="@+id/byear"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/sgender"
            android:layout_toEndOf="@+id/birthdate"
            android:layout_toRightOf="@+id/birthdate"
            android:entries="@array/year" />

        <Spinner
            android:id="@+id/sday"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/smonth"
            android:layout_alignBottom="@+id/smonth"
            android:layout_alignEnd="@+id/sgender"
            android:layout_alignRight="@+id/sgender"
            android:entries="@array/day" />

        <Spinner
            android:id="@+id/smonth"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_below="@+id/sgender"
            android:layout_toEndOf="@+id/byear"
            android:layout_toRightOf="@+id/byear"
            android:entries="@array/month"/>

        <TextView
            android:id="@+id/ExisteD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/birthdate"
            android:layout_alignStart="@+id/birthdate"
            android:layout_below="@+id/byear"
            android:layout_marginTop="14dp"
            android:text="@string/ExistD"
            android:textColor="@color/colorblack"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/diabetes"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/byear"
            android:layout_alignStart="@+id/byear"
            android:layout_below="@+id/ExisteD"
            android:text="@string/diabetes"
            android:textColor="@color/colorgray"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/Asthma"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/byear"
            android:layout_alignStart="@+id/byear"
            android:layout_below="@+id/diabetes"
            android:text="@string/Asthma"
            android:textColor="@color/colorgray"
            android:textSize="12sp" />
        <CheckBox
            android:id="@+id/b_pressure"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/byear"
            android:layout_alignStart="@+id/byear"
            android:layout_below="@+id/Asthma"
            android:text="@string/bPressure"
            android:textColor="@color/colorgray"
            android:textSize="12sp" />

        <CheckBox
        android:id="@+id/None"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/byear"
        android:layout_alignStart="@+id/byear"
        android:layout_below="@+id/b_pressure"
        android:text="@string/none"
        android:textColor="@color/colorgray"
        android:textSize="12sp" />

        <TextView
            android:id="@+id/vivoSmart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ExisteD"
            android:layout_alignStart="@+id/ExisteD"
            android:layout_below="@+id/None"
            android:text="@string/vivoSmart"
            android:textColor="@color/colorblack"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/b_pressure"
            android:layout_alignStart="@+id/b_pressure"
            android:layout_below="@+id/vivoSmart"
            android:layout_marginTop="20dp"
            android:text="@string/yes" />

        <RadioButton
            android:id="@+id/No"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/yes"
            android:layout_alignBottom="@+id/yes"
            android:layout_toEndOf="@+id/diabetes"
            android:layout_toRightOf="@+id/diabetes"
            android:text="@string/No" />

        <Button
            android:id="@+id/SignupBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/yes"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="@color/colorPrimary"
            android:text="@string/signup" />

        <TextView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/FirstName"
            android:layout_toEndOf="@+id/FirstName"
            android:layout_toRightOf="@+id/FirstName"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FirstName"
            android:layout_toEndOf="@+id/FirstName"
            android:layout_toRightOf="@+id/FirstName"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LastName"
            android:layout_toEndOf="@+id/LastName"
            android:layout_toRightOf="@+id/LastName"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>



        <TextView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_toEndOf="@+id/email"
            android:layout_toRightOf="@+id/email"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/password"
            android:layout_toEndOf="@+id/cpassword"
            android:layout_toRightOf="@+id/cpassword"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cpassword"
            android:layout_toEndOf="@+id/cpassword"
            android:layout_toRightOf="@+id/cpassword"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>

        <TextView
            android:id="@+id/star8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_toEndOf="@+id/phone"
            android:layout_toRightOf="@+id/phone"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sgender"
            android:layout_toEndOf="@+id/sday"
            android:layout_toRightOf="@+id/sday"
            android:text="@string/star"
            android:textColor="@color/colorRed"/>


    </RelativeLayout>
</ScrollView>