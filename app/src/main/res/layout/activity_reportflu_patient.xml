<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/gender"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/date"
            android:layout_alignLeft="@+id/genderTextCorona"
            android:layout_alignRight="@+id/date"
            android:layout_alignStart="@+id/genderTextCorona"
            android:layout_below="@+id/genderTextCorona"
            android:spinnerMode="dropdown" />

        <TextView
            android:id="@+id/genderTextCorona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ageRange"
            android:layout_alignStart="@+id/ageRange"
            android:layout_below="@+id/ageRange"
            android:text="@string/Gender" />


        <TextView
            android:id="@+id/loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reportflubtn"
            android:layout_alignStart="@+id/reportflubtn"
            android:layout_below="@+id/rgroup"
            android:layout_marginTop="22dp"
            android:text="@string/location" />

        <EditText
            android:id="@+id/date"
            android:layout_width="270dp"
            android:layout_height="35dp"
            android:layout_below="@+id/DateText"
            android:layout_centerHorizontal="true"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:hint="@string/date2"
            android:inputType="date"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/reportCoronaNav"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary"
            android:text="@string/Reportflu"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/date"
            android:layout_alignStart="@+id/date"
            android:layout_below="@+id/reportCoronaNav"
            android:layout_marginTop="42dp"
            android:text="@string/date" />

        <TextView
            android:id="@+id/ageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/date"
            android:layout_alignStart="@+id/date"
            android:layout_below="@+id/date"
            android:layout_marginTop="18dp"
            android:text="@string/age" />

        <Button
            android:id="@+id/reportflubtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/star19"
            android:layout_alignRight="@+id/star19"
            android:layout_below="@+id/lat3"
            android:layout_marginTop="27dp"
            android:background="@android:color/holo_red_light"
            android:text="@string/report" />

        <Spinner
            android:id="@+id/ageRange"
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/date"
            android:layout_alignLeft="@+id/ageText"
            android:layout_alignRight="@+id/date"
            android:layout_alignStart="@+id/ageText"
            android:layout_below="@+id/ageText" />

        <TextView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ageRange"
            android:layout_toEndOf="@+id/ageRange"
            android:layout_toRightOf="@+id/ageRange"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/loc"
            android:layout_alignBottom="@+id/loc"
            android:layout_toEndOf="@+id/reportflubtn"
            android:layout_toRightOf="@+id/reportflubtn"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/genderTextCorona"
            android:layout_toEndOf="@+id/gender"
            android:layout_toRightOf="@+id/gender"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/date"
            android:layout_alignBottom="@+id/date"
            android:layout_alignEnd="@+id/star"
            android:layout_alignRight="@+id/star"
            android:layout_toEndOf="@+id/date"
            android:layout_toRightOf="@+id/date"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/star15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/date"
            android:layout_toEndOf="@+id/date"
            android:layout_toLeftOf="@+id/star"
            android:layout_toRightOf="@+id/date"
            android:layout_toStartOf="@+id/star"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/star22"
            android:layout_alignBottom="@+id/star22"
            android:layout_alignLeft="@+id/loc"
            android:layout_alignStart="@+id/loc"
            android:text="@string/que" />

        <RadioGroup
            android:id="@+id/rgroup"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignLeft="@+id/gender"
            android:layout_alignStart="@+id/gender"
            android:layout_below="@+id/question"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp">

            <RadioButton
                android:id="@+id/advice"
                android:layout_width="239dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:text="@string/Dadvice"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/none"
                android:layout_width="239dp"
                android:layout_height="4dp"
                android:layout_weight="1"
                android:text="@string/none"
                android:textSize="12sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/lat3"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/loc"
            android:layout_alignStart="@+id/loc"
            android:layout_below="@+id/loc"
            android:layout_marginTop="15dp"
            android:text="" />

        <TextView
            android:id="@+id/long3"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_alignBaseline="@+id/lat3"
            android:layout_alignBottom="@+id/lat3"
            android:layout_alignEnd="@+id/star15"
            android:layout_alignRight="@+id/star15"
            android:text="" />

        <TextView
            android:id="@+id/star22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_marginTop="31dp"
            android:layout_toEndOf="@+id/gender"
            android:layout_toRightOf="@+id/gender"
            android:text="@string/star"
            android:textColor="@color/colorRed" />

    </RelativeLayout>
</ScrollView>